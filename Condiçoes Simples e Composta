nota1 = float(input('Digote a primeira nota:'))
nota2 = float(input("Digite Ssegunda nota : "))
media = (nota1 + nota2)/2
print("A sua media final foi {}".format(media ))
if media >= 6.0:
    print("Parabens foi aprovado ")
else:
    print("Voce falhou! estude mais ")

